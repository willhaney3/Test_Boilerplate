@using Microsoft.AspNetCore.Routing
@using Test_Boilerplate.Web.Startup
@{
	ViewBag.ActiveMenu = PageNames.Home;
}
@model List<Test_Boilerplate.AppService.PersonDto>

@section scripts
	{
	<environment names="Development">
		<script src="~/js/views/home/index.js"></script>
	</environment>
	<environment names="Staging,Production">
		<script src="~/js/views/home/index.min.js"></script>
	</environment>
}
<h2>@L("HelloWorld")!</h2>
<div class="row">
	<div class="col-lg-12">
		@L("Home_Description")
	</div>

	@Html.ActionLink("Add Person", "Index", "Test")


	<table border="1">
		<thead><tr><td>ID</td><td>Name</td></tr></thead>
		@foreach (var p in @Model)
		{
			<tr>
				<td>@p.Id</td>
				<td>
					@p.PersonName
				</td>
			</tr>

		}
	</table>

</div>
